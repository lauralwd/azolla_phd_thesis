pmid = {19951421},
publisher = {BioMed Central},
title = {{Metagenomic islands of hyperhalophiles: The case of Salinibacter ruber}},
url = {https://link.springer.com/articles/10.1186/1471-2164-10-570 https://link.springer.com/article/10.1186/1471-2164-10-570},
