@article{Nierzwicki-Bauer1990,
abstract = {The occurrence and ultrastructure of eubacteria within leaf cavities of symbiotic and cyanobiont-free Azolla mexicana were examined with transmission electron microscopy. Bacteria were observed in all leaf cavities of both Azolla cultures, showing increasing numbers concomitant with leaf age. In symbiotic Azolla mexicana two ultrastructurally distinct types of bacteria were found; a helical bacterium and a slightly curved, rod-shaped bacterium. Both had typical Gram-negative cell wall ultrastructure. The helical bacteria comprised 60{\%} of the total population in young leaf cavities (1-5) and 74-80{\%} of the population in older cavities. The mode of cell division for the rod-shaped bacterium was binary fission. In cyanobiont-free Azolla mexicana at least three distinct types of bacteria were observed; two were ultrastructurally similar to, if not identical, with the types present in symbiotic Azolla mexicana. {\textcopyright} 1990 Springer-Verlag New York Inc.},
