number = {1},
pages = {1--18},
pmid = {25885210},
publisher = {BioMed Central Ltd.},
title = {{Local hopping mobile DNA implicated in pseudogene formation and reductive evolution in an obligate cyanobacteria-plant symbiosis}},
url = {https://link.springer.com/articles/10.1186/s12864-015-1386-7 https://link.springer.com/article/10.1186/s12864-015-1386-7},
