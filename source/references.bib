journal = {Symbiosis},
keywords = {Bradyrhizobium japonicum,Denitrification,Flooding,Nitrate,Nitrous oxide reductase,Soybean nodules},
month = {nov},
number = {1-3},
pages = {125--133},
publisher = {Springer Netherlands},
title = {{Nitrate and flooding induce N2O emissions from soybean nodules}},
