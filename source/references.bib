journal = {Frontiers in Microbiology},
keywords = {Algae commensalism,Genlisea,Lobster pot trapping,Metatranscriptomics,Plant carnivory,Plant-microbe interaction,RNA-sequencing,Whole-genome gene transcription analysis},
number = {MAY},
pages = {526},
publisher = {Frontiers Media S.A.},
title = {{Metatranscriptome analysis reveals host-microbiome interactions in traps of carnivorous Genlisea species}},
volume = {6},
year = {2015}
}
